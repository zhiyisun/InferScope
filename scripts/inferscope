#!/usr/bin/env python3
"""
InferScope CLI Entry Point

This script provides the command-line interface for InferScope.
It should be installed as a console script entry point.

Usage:
    inferscope run <script> [options]
    inferscope analyze <trace.json> [options]
    inferscope config show
"""

import sys
import os

if __name__ == "__main__":
    # Add src to path for running from workspace
    workspace_root = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
    src_path = os.path.join(workspace_root, 'src')
    if src_path not in sys.path:
        sys.path.insert(0, src_path)

from inferscope.cli import main

if __name__ == "__main__":
    sys.exit(main())
